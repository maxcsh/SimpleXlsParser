
<div class="panel panel-warning" style="margin-top:50px;">
  <%= link_to "客戶資料總覽", business_cards_path , :class => "btn btn-info" %>
  <%= link_to "上傳客戶資料表" , upload_business_cards_path , :class => "btn btn-primary" %>
  <%= link_to "新增客戶資料" , new_business_card_path  , :class => "btn btn-success" %>
  <div class="panel-heading">
    <h3>客戶資料</h3>
    <%= link_to "修改" , edit_business_card_path( @card ) %> 
    <%= link_to "刪除" , business_card_path( @card ) , :method => :delete , :data => { :confirm => "確定要刪除嗎?" } %>
  </div>
  <div class="panel-body">
    <table class="table table-bordered light">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th>公司名稱</th>
            <th>姓名</th>
            <th>職稱</th>
            <th>電話</th>
            <th>傳真</th>
            <th>手機</th>
            <th>地址</th>
            <th>電子信箱</th>
            <th>統編</th>
            <th>收到備註</th>
            <th>建檔</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td> <%= @card.category_number %> </td>
              <td> <%= @card.category %> </td>
              <td> <%= @card.company_name %> </td>
              <td> <%= @card.name %> </td>
              <td> <%= @card.title %> </td>
              <td> <%= @card.phone %> </td>
              <td> <%= @card.tax_phone %> </td>
              <td> <%= @card.mobile_phone %> </td>
              <td> <%= @card.address %> </td>
              <td> <%= @card.email %> </td>
              <td> <%= @card.vat_number %> </td>
              <td> <%= @card.note %> </td>
              <td> <%= @card.old_created_at %> </td>
            </tr>
        </tbody>
      </table> 
    
  </div>
</div>